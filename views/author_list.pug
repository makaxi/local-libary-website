extends layout

block content
  h1= title

  ul
    each author in author_list
      li
        a(href=author.url) #{author.name}
        | 
        if author.date_of_death
          if author.date_of_birth
            span (#{author.date_of_birth_formatted} - #{author.date_of_death_formatted})
          else
            span (Died #{author.date_of_death_formatted})
        else if author.date_of_birth 
          span (Born: #{author.date_of_birth_formatted})

    else
      li There are no authors.
